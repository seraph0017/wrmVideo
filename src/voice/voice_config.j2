{
    "app": {
        "appid": "{{ tts_config.appid }}",
        "token": "{{ tts_config.access_token }}",
        "cluster": "{{ tts_config.cluster }}"
    },
    "user": {
        "uid": "{{ user_id | default('388808087185088') }}"
    },
    "audio": {
        "voice_type": "{{ voice_type | default('BV700_streaming') }}",
        "encoding": "{{ encoding | default('mp3') }}",
        "speed_ratio": {{ speed_ratio | default(1.0) }},
        "volume_ratio": {{ volume_ratio | default(1.0) }},
        "pitch_ratio": {{ pitch_ratio | default(1.0) }}
    },
    "request": {
        "reqid": "{{ request_id }}",
        "text": "{{ text }}",
        "text_type": "{{ text_type | default('plain') }}",
        "operation": "{{ operation | default('query') }}",
        "with_frontend": {{ with_frontend | default(1) }},
        "frontend_type": "{{ frontend_type | default('unitTson') }}"
    }
}